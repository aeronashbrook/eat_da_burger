<div id="image">
        <img src="https://png.pngtree.com/svg/20161106/hamburger_burger_31438.png" width="300" height="300" alt="burger image">
  </div>
  <div id="form">
        <form class="create-update-form">
            <div id="formdiv" class="form-group">
                <h5 class="text-center">Enter a burger to add to the list</h5>
                <textarea id="input" class="form-control" type="text" name="name"></textarea><br>
                <button id="submit" class="btn btn-default" type="submit">Submit</button>
            </div>
        </form>
    </div>
  <div id="container">
        <div id="uneaten">
            <h3>Uneaten Burgers</h3>
		    <ol>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    <strong>{{this.burger_name}}</strong>
                    {{> devour/devourbutton}}
                    <br><br>
                </li>
                {{/unless}}
                {{/each }}
            </ol>
        </div>
        <div id="eaten">
            <h3>Eaten Burgers</h3>
		<ol>
            {{#each burgers}}
            {{#if this.devoured}}
            <li>
                <strong>{{this.burger_name}}</strong>
                <br><br>
            </li>
            {{/if}}
            {{/each }}
        </ol>
        </div>
  </div>